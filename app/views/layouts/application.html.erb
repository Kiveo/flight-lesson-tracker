<!DOCTYPE html>
<html>
  <head>
    <title>FlightLessonTracker</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <a id="top"></a>
    <header>
      <nav>
        <ul>
          <li><%= link_to 'Flight Lesson Tracker', root_url %></li><li>
          <%= link_to 'Instructors', instructors_path %></li><li>
          <%= link_to 'Lessons', lessons_path %></li><li>
          <%= link_to 'Students', students_path %></li><li>
          <% if logged_in? %>
            <%= link_to 'Reports', instructor_reports_path(current_user) %></li><li>
            <%= link_to 'Dashboard', instructor_path(current_user) %></li><li>
            <%= link_to "Log Out", '/logout', method: "delete" %></li>
          <% else %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <div class="wrapper">

      <%= yield %>

    </div>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true, 'data-turbolinks-suppress-warning' => true %>
  </body>
</html>
